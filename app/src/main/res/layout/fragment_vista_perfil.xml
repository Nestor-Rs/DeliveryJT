<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.VistaPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/nombrePerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_de_prueba"
                android:textSize="@dimen/titulo"
                android:textAlignment="center"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:paddingBottom="@dimen/texto"
                android:paddingTop="@dimen/texto"
                android:background="@color/grayDark"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editarPerfil"
                android:layout_width="@dimen/buttons"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/editar"
                android:onClick="onClickPerfil"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <TextView
                android:id="@+id/telefonoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_de_prueba"
                android:textSize="@dimen/titulo"
                android:textAlignment="center"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <TextView
                android:id="@+id/correoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_de_prueba"
                android:textSize="@dimen/titulo"
                android:textAlignment="center"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/direccionPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_de_prueba"
                android:textSize="@dimen/titulo"
                android:textAlignment="center"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/espacios" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eliminarPerfil"
                android:layout_width="@dimen/buttons"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cerrar_sesion"
                android:onClick="onClickPerfil"
                android:backgroundTint="@color/design_default_color_error"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>